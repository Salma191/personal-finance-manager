@model SmartFinance.Models.Compte

@{
    ViewData["Title"] = "Modifier un compte";
}

<form asp-controller="Compte" asp-action="Edit" method="post">
    <div>
        <label asp-for="Nom" class="form-label">Nom :</label>
        <input asp-for="Nom" value="@Model.Nom" class="form-control" />
    </div>
    <div>
        <label asp-for="Institution" class="form-label">Institution :</label>
        <input asp-for="Institution" value="@Model.Institution" class="form-control" />
    </div>
    <div>
        <label asp-for="Solde" class="form-label">Solde :</label>
        <div class="input-group mb-3">
        <input asp-for="Solde" value="@Model.Solde" type="number" step="0.01" class="form-control" />
        <span class="input-group-text">Dhs</span>
        </div>
    </div>
    <div>
        <label asp-for="TypeCompte" class="form-label">Type Compte</label>
        <select asp-for="TypeCompte" asp-items="ViewBag.TypeCompte" value="@Model.TypeCompte" class="form-select"></select>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>

<a asp-controller="Compte" asp-action="Index" class="btn btn-secondary">Retour</a>