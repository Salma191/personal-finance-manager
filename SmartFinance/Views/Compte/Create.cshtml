
@model SmartFinance.Models.Compte

@{
    ViewData["Title"] = "Créer un compte";
}

<h2>Créer un compte</h2>

<form asp-controller="Compte" asp-action="Create" method="post">
    <div>
        <label asp-for="Nom" class="form-label">Nom :</label>
        <input asp-for="Nom" class="form-control" />
    </div>
    <div>
        <label asp-for="Institution" class="form-label">Institution :</label>
        <input asp-for="Institution" class="form-control" />
    </div>
    <div>
        <label asp-for="Solde" class="form-label">Solde :</label>
        <div class="input-group mb-3">
        <input asp-for="Solde" type="number" step="0.01" class="form-control" />
            <span class="input-group-text">Dhs</span>
        </div>
    </div>
    <div>
        <label asp-for="TypeCompte" class="form-label">TypeCompte :</label>
        <select asp-for="TypeCompte" asp-items="ViewBag.TypeCompte" class="form-select"></select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
</form>
<a asp-controller="Compte" asp-action="Index" class="btn btn-secondary mt-2">Retour</a>