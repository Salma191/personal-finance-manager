@model SmartFinance.Models.Categorie
@{
}

<form asp-controller="Categorie" asp-action="Edit" method="post">
    <div>
        <label asp-for="Nom">Nom</label>
        <input asp-for="Nom" value="@Model.Nom" />
    </div>
    <div>
        <label asp-for="Description">Description</label>
        <input asp-for="Description" value="@Model.Description" />
    </div>
    <div>
        <label asp-for="EstEssentielle">EstEssentielle :</label>
        @Html.RadioButtonFor(m => m.EstEssentielle, true, new { @checked = Model.EstEssentielle ? "checked" : "" }) Oui
        @Html.RadioButtonFor(m => m.EstEssentielle, false, new { @checked = !Model.EstEssentielle ? "checked" : "" }) Non 
    </div>
    <div>
        <label asp-for="AUnPlafond">AUnPlafond</label>
        @Html.RadioButtonFor(m => m.AUnPlafond, true, new { @checked = Model.AUnPlafond ? "checked" : "" }) Oui
        @Html.RadioButtonFor(m => m.AUnPlafond, false, new { @checked = !Model.AUnPlafond ? "checked" : "" }) Non
    </div>

    <button type="submit">Enregistrer</button>
</form>