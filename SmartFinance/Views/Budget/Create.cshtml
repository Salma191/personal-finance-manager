@{
}

@model SmartFinance.Models.Budget

<form asp-controller="Budget" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MontantAlloue">Montant Alloue</label>
        <input asp-for="MontantAlloue" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MoisAnnee">Mois Annee</label>
        <input asp-for="MoisAnnee" type="date" class="form-control" />
    </div>

    <div class="form-group">
    <label asp-for="CategorieId">Categorie</label>
        <select asp-for="CategorieId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>

    <button class="btn btn-primary" type="submit">Ajouter</button>
</form>
