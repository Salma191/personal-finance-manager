@model IEnumerable<SmartFinance.Models.Transaction>

@{
    ViewData["Title"] = "Liste des Transactions";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Transactions</h3>
        <a asp-action="Create" class="btn btn-primary">+ Nouvelle Transaction</a>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Montant</th>
                <th>Date</th>
                <th>Type</th>
                <th>Catégorie</th>
                <th>Compte</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Montant.ToString("C")</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>
                        <span class="badge @(item.Type == TypeTransaction.Revenu ? "bg-success" : "bg-danger")">
                            @item.Type
                        </span>
                    </td>
                    <td>@item.Categorie</td>
                    <td>@item.Compte?.Nom</td>
                    <td>@item.Description</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="bi bi-trash-fill"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
